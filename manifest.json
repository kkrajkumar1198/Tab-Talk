{
  "manifest_version": 3,
  "name": "Tab Talk - AI Collaborative Tab Manager",
  "version": "1.0.0",
  "description": "Intelligent collaborative tab sharing with AI-powered clustering and real-time collaboration",
  "permissions": [
    "tabs",
    "storage",
    "sidePanel",
    "scripting",
    "activeTab",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Tab Talk"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}